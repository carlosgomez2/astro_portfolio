---
const { href, title, badges, body, klass } = Astro.props;
---

<li class:list={[klass]} class="card w-96 bg-base-300 shadow-xl">
	<a href={href}>	
		<figure>
			<img src="/images/thalia-tran-d1Wj9qU5C-o-unsplash.jpg" alt="Code 1" /></figure>
		<div class="card-body">
			<h2 class="fira-code card-title">
				{title}
			</h2>
			<p>{body}</p>
			<div class="card-actions justify-end">
				{
					[...badges].map(badge => <span class="badge badge-info">{badge}</span>)
				}
			</div>
		</div>
	</a>
</li>
